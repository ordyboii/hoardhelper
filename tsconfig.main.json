{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "outDir": "dist-electron",
    "rootDir": "src",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/main.ts",
    "src/preload.ts",
    "src/logic/**/*"
  ]
}