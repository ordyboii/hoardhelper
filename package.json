{
  "name": "hoardhelper",
  "version": "1.0.0",
  "description": "Organise your self-hosted media treasures",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist dist-electron",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build": "npm run clean && npm run build:main && npm run build:renderer",
    "watch:main": "tsc -p tsconfig.main.json -w",
    "dev": "concurrently -k \"vite\" \"npm run watch:main\" \"NODE_ENV=development electron .\"",
    "preview": "vite preview",
    "test": "node --import tsx --test --experimental-test-coverage test/*.test.ts",
    "dist": "npm run build && electron-builder",
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\" \"test/**/*.ts\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": {
    "name": "ordyboii",
    "email": "68291857+ordyboii@users.noreply.github.com"
  },
  "homepage": "https://example.com/hoardhelper",
  "license": "ISC",
  "build": {
    "appId": "com.ordyboii.hoardhelper",
    "productName": "Hoardhelper",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "linux": {
      "target": "deb",
      "category": "Utility",
      "maintainer": "ordyboii <68291857+ordyboii@users.noreply.github.com>"
    }
  },
  "dependencies": {
    "electron-store": "^11.0.2",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "webdav": "^5.8.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.8",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.3.1"
  }
}
